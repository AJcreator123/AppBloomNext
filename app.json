{
  "expo": {
    "name": "BloomBear",
    "slug": "AppBloom",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "appbloom",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.AppBloom",
      "usesAppleSignIn": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Bloom allows you to choose a photo to set as your profile picture so you can personalize your account.",
        "NSCameraUsageDescription": "Bloom uses the camera so you can take a profile picture and document your plants.",
        "NSUserNotificationUsageDescription": "Bloom uses notifications to remind you when your plants need watering and care.",
        "NSBluetoothUsageDescription": "Bloom uses Bluetooth to connect to your Bloom Pot to read sensor data and manage plant care.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.1031881587398-1bkcq0vo6bos8076uemdqsger3bsak5k"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "package": "com.anonymous.AppBloom"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "c8e5f407-0742-44a9-bf6c-4b07bcbe8a89"
      }
    },
    "owner": "brubru6707"
  }
}
